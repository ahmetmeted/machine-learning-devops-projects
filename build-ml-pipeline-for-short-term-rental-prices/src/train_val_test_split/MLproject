name: train_val_test_split

entry_points:
  main:
    parameters:
      input_path: {type: str}
      trainval_out: {type: str}
      test_out: {type: str}
      test_size: {type: float}
      random_seed: {type: int}
      stratify_by: {type: str}
    command: >
      python run.py
      --input_path {input_path}
      --trainval_out {trainval_out}
      --test_out {test_out}
      --test_size {test_size}
      --random_seed {random_seed}
      --stratify_by "{stratify_by}"
